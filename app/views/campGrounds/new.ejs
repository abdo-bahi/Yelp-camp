<% layout("layouts/boilerplate")%>

    <div class="row">
        <h1 class="text-center">Add New Campground :</h1>
    </div>
    <div class="col-6 offset-3">
        <form action="/campground" method="POST"  novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" id="title" name="title" required>
                              <div class="valid-feedback">
                Looks good!
              </div>
              </div>

              <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" class="form-control" id="location" name="location" required>
                              <div class="valid-feedback">
                Looks good!
              </div>
              </div>
              <input type="file" id="image" name="image">
<!-- 
              <div class="mb-3">
                <label for="image" class="form-label">Image URL : </label>
              <div class="valid-feedback">
                Looks good!
              </div>   -->
              <div class="mb-3 mt-3">
                <label for="price" class="form-label">Price : </label>
                <div class="input-group">

                  <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                  </div>
                  <input type="number" class="form-control" id="price" name="price" min="0"aria-label="Amount (to the nearest dollar)" required>
                  <div class="input-group-append">
                    <span class="input-group-text">.00</span>
                  </div>

                </div>                
                              <div class="valid-feedback">
                Looks good!
              </div>
              </div>

                              
              <div class="mb-3 mt-3">
                <label for="description" class="form-label">Description </label>
                <input type="text" class="form-control" id="description" name="description" required>
                              <div class="valid-feedback">
                Looks good!
              </div>
              </div>
              <button class="btn btn-success">Submit</button>
              <script src="/js/validateForms.js"> </script>

        </form>
    </div>



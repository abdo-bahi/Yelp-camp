<% layout("layouts/boilerplate")%>
<!-- using express this is telling the brower to request this URL from express so full path as /public/css/stars.css won't work -->
<link rel="stylesheet" type="text/css" href="/css/stars.css">

<div class="row">
   <!-- this is how u center a div (col4 takes 4 columns,
     offset-4 skip four from the total of 12 column in a row generated by Bootstrap) -->
  <div class="col-5 offset-1 mb-4">
    <div class="card" >
      
      <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <% camp.images.forEach((image, i) => { %>
            <div class="carousel-item <%= i === 0 ? 'active' : ''%>">
            <img class="d-block w-100" src="<%=image.url%>"  alt="" />
            </div>
            <% }) %>
        </div>
        <% if(camp.images.length > 1) { %>
        <a class="carousel-control-prev" data-bs-target="#carouselExampleControls" role="button" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only"></span>
        </a>
        <a class="carousel-control-next" data-bs-target="#carouselExampleControls" role="button" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only"></span>
        </a>
        <% } %>
      </div>

      <div class="card-body">
        <h5 class="card-title"><%=camp.title%></h5>
        <p class="card-text"><%=camp.description%></p>
        <b class="card-title"><%=camp.price%></b>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%=camp.location%></li>
        <li class="list-group-item">Submited by <b><%=camp.author.username%></b></li>
      </ul>
      <% if(currentUser && camp.author.equals(currentUser._id)) { %>
      <div class="card-body">
        <a href="/campground/<%=camp._id%>/edit" class="btn btn-primary"
          >Edit</a>
      </div>
      <% } %>
      <div class="card-footer">
       Price : <%= camp.price || 0.00  %> $
      </div>
      </div>

  </div>
  <div class="col-4 mr-1">
    <h5 class="mt-2">Reviews :</h5>

      <form action="/campground/<%=camp._id%>/reviews" method="POST" novalidate class="validated-form">
        <div class="mb-3">
  <!-- <label for="rating" class="form-label">Rating</label>
  <input type="range" class="form-range" id="rating" name="review[rating]" min="1" max="5" required> -->
  <fieldset class="starability-basic">
    <legend>Rating:</legend>
    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
    <label for="first-rate1" title="Terrible">1 star</label>
    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
    <label for="first-rate2" title="Not good">2 stars</label>
    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
    <label for="first-rate3" title="Average">3 stars</label>
    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
    <label for="first-rate4" title="Very good">4 stars</label>
    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
    <label for="first-rate5" title="Amazing">5 stars</label>
  </fieldset>
              <div class="valid-feedback">
  Looks good!
  </div> 
  <div class="mb-3">
  <label for="review" class="form-label">Review</label>
  <textarea class="form-control" name="review[body]" id="review" cols="30" rows="4" required></textarea>
              <div class="valid-feedback">
  Looks good!
  </div>

  <button class="btn btn-success mt-3 mb-3">Submit</button>
  
  </form>
    <%for (let review of camp.reviews) {%>
      <div class="card mb-3"> 
      
        <div class="card-body">
          <%if  (review.author && review.author.username) { %>
            <b><p class="card-text"> <%=review.author.username%></p></b>
          <%}%>
          <!-- <h5 class="card-title"><%=review.rating%></h5> -->
          <p class="starability-result" data-rating="<%=review.rating%>">
            Rated: <%=review.rating%> stars
          </p>
          <p class="card-text"><%=review.body%></p>

          <%if  (currentUser && review.author && review.author.equals(currentUser._id)) { %>
            <form action="/campground/<%=camp._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
              <button class="btn btn-sm btn-danger">DELETE</button>
            </form>          
          <%}%>

        </div>
      </div>     
    <%}%>


</div>
</div>
<script>
  // Example starter JavaScript for disabling form submissions if there are invalid fields
(function () {
'use strict'

// Fetch all the forms we want to apply custom Bootstrap validation styles to
var forms = document.querySelectorAll('.validated-form')

// Loop over them and prevent submission
Array.prototype.slice.call(forms)
.forEach(function (form) {
  form.addEventListener('submit', function (event) {
    if (!form.checkValidity()) {
      event.preventDefault()
      event.stopPropagation()
    }

    form.classList.add('was-validated')
  }, false)
})
})()
</script>